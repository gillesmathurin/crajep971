<h1>Enregistrez un nouveau utilisateur membre</h1>
<% @user.password = @user.password_confirmation = nil %>

<%= error_messages_for :user %>
<% form_for :user, :url => users_path do |f| -%>
<p><%= label_tag 'Identifiant' %><br/>
<%= f.text_field :login %></p>

<p><%= label_tag 'email' %><br/>
<%= f.text_field :email %></p>

<p><%= label_tag 'Mot de Passe' %><br/>
<%= f.password_field :password %></p>

<p><%= label_tag 'password_confirmation', 'Confirmation du Mot de passe' %><br/>
<%= f.password_field :password_confirmation %></p>

<p>
    <%= f.label :categorie, "Categorie" %><br/>
    <%= f.select :categorie, User::CATEGORIES, { :include_blank => true } %>
</p>

<p><%= submit_tag 'Enregistrer' %></p>
<% end -%>
