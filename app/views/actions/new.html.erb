<div id="yui-main">
    <div class="yui-g">
        <h1 class="accroche">Enregistrement d'une Action</h1>
    </div>

    <div class="yui-gc">
        <div class="yui-u first">
            <% form_for :uneaction, :url => actions_path do |f| -%>
                <%= render :partial => 'form', :locals => {:f => f} %>
            <% end -%>
           <p>
                <% if @categorie_action %>
                    <%= link_to "Retour", categorie_action_path(@categorie_action) %>
                <% else %>
                    <%= link_to "Retour", actions_path() %>
                <% end %>
           </p> 
            
        </div>
        
        <div class="yui-u">
            <%= render :partial => "shared/edition" %>    
        </div>
    </div>

</div>

<div class="yui-b sidebar">
    
</div>